@model List<AppUser>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                IsActive
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Send
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (AppUser item in Model)
                        {


                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.IsActive
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="change" asp-route-id="@item.Id" class="btn btn-danger">Change Visibility</a>

                                </td>
                                <td> 
                                    <a asp-controller="user" asp-action="send" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-envelope"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>