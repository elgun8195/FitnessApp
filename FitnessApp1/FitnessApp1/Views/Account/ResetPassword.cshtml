@using FitnessApp1.ViewModels.Account;
@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}
<section class="inner-banner pattern-3">
    <div class="container text-center">
        <h2>Login & Register</h2>
        <p>We offer Fitness & Yoga services since 1996</p>
    </div>
</section>
<section class="bread-cumb">
    <div class="container text-center">
        <ul>
            <li><a href="index.html">Home</a></li>
            <li><a href="index.html">Packages</a></li>
            <li><span>Login & Register</span></li>
        </ul>
    </div>
</section>
<section class="section-padding login-register">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="section-title">
                    <h1>Reset Password</h1>
                </div>
                <!-- /.section-title -->
                <form method="post">
                    <div class="form-grp">
                        <input asp-for="NewPassword" placeholder="New Password" />
                        <span class="text-warning text" asp-validation-for="NewPassword"></span>

                        <i class="fa fa-user"></i>
                    </div>
                    <!-- /.form-grp -->
                    <div class="form-grp">
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <span class="text-warning text" asp-validation-for="ConfirmPassword"></span>
                        <i class="fa fa-envelope-o"></i>
                    </div>
                    <!-- /.form-grp -->
                    <div class="clearfix submit-box">
                        <div class="pull-left">
                            <button class="thm-btn" type="submit">Login</button>
                        </div>
                       
                        <!-- /.pull-right -->
                    </div> 
                </form>
            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
<!-- /.section-padding -->