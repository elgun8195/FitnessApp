@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index"; int counter = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Table</h6>
                <a asp-area="manage" asp-controller="blog" asp-action="Create" class="btn btn-success">Create</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image</th>
                            <th scope="col">Title</th>
                            <th scope="col">icon</th>
                            <th scope="col">Description</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Update</th>
                            <th scope="col">Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            counter++;
                            <tr>
                                <th scope="row">@counter</th>
                                <td><img style="width:100px;" src="~/img/blog-post/@item.Image" /></td>
                                <td>@item.Title</td>
                                <td>@item.Icon</td>

                                <td>@item.Description</td>
                                <td><a asp-area="manage" asp-controller="blog" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger  ">Delete</a></td>
                                <td><a asp-area="manage" asp-controller="blog" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning  ">Edit</a></td>
                                <td><a asp-area="manage" asp-controller="blog" asp-action="detail" asp-route-id="@item.Id" class="btn btn-warning  ">detail</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 